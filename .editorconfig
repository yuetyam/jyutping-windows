root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{h,c,cpp,cxx,cs,xml,xaml}]
indent_style = space
indent_size = 4
tab_width = 4

[*.sln]
indent_style = tab
indent_size = 8
tab_width = 8

[*.{vcxproj,vcxproj.filters,vsxproj.user}]
indent_style = space
indent_size = 2
tab_width = 2
